<%- include('./partials/header') %>

<div class="px-4 py-10">
  <% user.cart.forEach(function(item) { %>
  <div
    class="w-full flex flex-col lg:flex-row items-start gap-6 mb-12 shadow-md rounded-lg border p-5"
  >
    <!-- Left: Product Image & Controls -->
    <div class="w-full lg:w-1/3 rounded overflow-hidden">
      <div class="w-full h-64 bg-gray-200 rounded-md overflow-hidden">
        <img
          class="object-cover w-full h-full"
          src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
          alt="Product Image"
        />
      </div>

      <div class="flex justify-between items-center mt-4 px-2">
        <h3 class="text-xl font-semibold"><%= item.name %></h3>
        <div class="flex items-center gap-2">
          <button
            class="w-8 h-8 bg-white border rounded-full flex items-center justify-center ri-add-line"
          ></button>
          <div class="px-3 py-1 rounded bg-white text-black border">1</div>
          <button
            class="w-8 h-8 bg-white border rounded-full flex items-center justify-center ri-subtract-line"
          ></button>
        </div>
      </div>

    </div>

    <!-- Right: Price Details -->
    <div class="w-full lg:w-2/3">
      <h3 class="text-lg font-semibold mb-4">Price Breakdown</h3>
      <div class="space-y-3 text-sm">
        <div class="flex justify-between">
          <h4>Total MRP</h4>
          <h4>₹ <%= item.price %></h4>
        </div>
        <div class="flex justify-between">
          <h4>Discount on MRP</h4>
          <h4 class="text-red-500">- ₹ <%= item.discount %></h4>
        </div>
        <div class="flex justify-between">
          <h4>Platform Fee</h4>
          <h4>₹ 20</h4>
        </div>
        <div class="flex justify-between">
          <h4>Shipping Fee</h4>
          <h4 class="text-green-600">FREE</h4>
        </div>
      </div>

      <div class="w-full h-[1px] bg-gray-300 my-6"></div>

      <div class="flex justify-between text-lg font-bold">
        <h3>Total Amount</h3>
        <h3 class="text-green-600">₹ <%= item.price + 20 - item.discount %></h3>
      </div>
    </div>
  </div>
  <% }) %>
 <!-- Net Total Section -->
<div class="max-w-4xl mx-auto mt-10 px-6 py-6 bg-green-50 border border-green-200 rounded-xl shadow-sm">
  <div class="flex flex-col md:flex-row items-center justify-between gap-4">
    <div class="flex items-center gap-2">
      <i class="ri-wallet-3-line text-2xl text-green-600"></i>
      <h4 class="text-xl font-semibold text-green-700">Net Total:</h4>
    </div>
    <h2 class="text-2xl font-bold text-green-800">₹ <%= totalBill %></h2>
    <form action="/payment/checkout" method="get">
      <button
        
        type="submit"
        class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg shadow transition-all duration-200"
      >
        Proceed to Checkout
      </button>
    </form>
  </div>
</div>


<%- include('./partials/footer') %>
