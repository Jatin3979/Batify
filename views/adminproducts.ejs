<%- include('partials/admin-header', { title: 'Admin - Products' }) %>

<!-- Page Content -->
<div class="w-full min-h-screen px-4 lg:px-20 pt-8 pb-10">
  <h2 class="text-3xl font-bold mb-8 text-center text-gray-800">⚙️ Products</h2>

  <div class="mb-8 text-right">
    <a href="/owners/products" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded text-sm sm:text-base">
      + Create New Product
    </a>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% products.forEach(function(product) { %>
      <div class="border rounded-lg overflow-hidden shadow bg-white">
        <div class="h-48 overflow-hidden flex items-center justify-center bg-gray-50">
          <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>" class="h-full object-cover" />
        </div>
        <div class="px-4 py-3 bg-gray-100">
          <h3 class="font-semibold text-lg mb-1"><%= product.name %></h3>
          <p class="text-gray-700 mb-1">Price: ₹ <%= product.price %></p>
          <p class="text-gray-500 text-sm">Discount: <%= product.discount %>%</p>
        </div>
        <div class="flex justify-between gap-3 px-4 py-3 bg-gray-200">
          <a href="/owners/edit/<%= product._id %>" class="bg-yellow-400 hover:bg-yellow-500 text-black px-3 py-1 rounded text-sm font-medium">✏️ Edit</a>
          <form action="/owners/delete/<%= product._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');">
            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm font-medium">🗑️ Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
