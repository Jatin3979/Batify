<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex">
    <!-- Sidebar -->
    <aside class="w-64 bg-gray-800 text-white flex flex-col">
      <div class="px-6 py-4 text-2xl font-bold border-b border-gray-700">
        <h1
        class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-500 bg-clip-text text-transparent flex items-center gap-2"
      >
        Welcome, <span class="text-white drop-shadow">JatinðŸ˜Š</span>
      </h1>
      </div>
      <nav class="flex-1 p-4 space-y-2">
        <a
          href="/owners/allproducts"
          class="block bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded"
          >ðŸ“¦ All Products</a
        >
        <a
          href="/owners/products"
          class="block bg-green-600 hover:bg-green-500 px-4 py-2 rounded"
          >âž• Create Product</a
        >
       
        
        <a
          href="/admin/users"
          class="block bg-purple-600 hover:bg-purple-500 px-4 py-2 rounded"
          >ðŸ‘¥ Manage Users</a
        >
      </nav>
      <div class="p-4 border-t border-gray-700">
        <a
          href="/logout"
          class="block text-center bg-red-600 hover:bg-red-500 px-4 py-2 rounded"
          >ðŸšª Logout</a
        >
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6 overflow-y-auto">
      <!-- Flash Messages -->
      <% if (error && error.length > 0) { %>
      <div class="bg-red-500 text-white px-4 py-2 rounded mb-4">
        <%= error[0] %>
      </div>
      <% } %> <% if (success && success.length > 0) { %>
      <div class="bg-green-500 text-white px-4 py-2 rounded mb-4">
        <%= success[0] %>
      </div>
      <% } %>

      <!-- Orders Table -->
      <h2 class="text-2xl font-bold mb-6">ðŸ“œ All Orders</h2>

      <% if (orders.length === 0) { %>
      <p class="text-gray-500">No orders found.</p>
      <% } else { %>
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full border border-gray-200">
          <thead class="bg-gray-200 text-gray-700">
            <tr>
              <th class="py-3 px-4 border-b">Order ID</th>
              <th class="py-3 px-4 border-b">User</th>
              <th class="py-3 px-4 border-b">Amount</th>
              <th class="py-3 px-4 border-b">Status</th>
              <th class="py-3 px-4 border-b">Date</th>
              <th class="py-3 px-4 border-b">Products</th>
              <th class="py-3 px-4 border-b">Invoice</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(function(order) { %>
            <tr class="border-b hover:bg-gray-50">
              <td class="py-3 px-4"><%= order.orderId %></td>
              <td class="py-3 px-4">
                <%= order.user.name %> (<%= order.user.email %>)
              </td>
              <td class="py-3 px-4">â‚¹ <%= order.amount / 100 %></td>
              <td class="py-3 px-4">
                <span
                  class="<%= order.status === 'paid' ? 'text-green-600' : 'text-red-600' %> font-medium"
                >
                  <%= order.status %>
                </span>
              </td>
              <td class="py-3 px-4"><%= order.createdAt.toDateString() %></td>
              <td class="py-3 px-4">
                <div class="flex flex-wrap gap-2">
                  <% order.products.forEach(function(product) { %>
                  <img
                    src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                    alt="<%= product.name %>"
                    class="w-10 h-10 object-cover rounded"
                  />
                  <% }) %>
                </div>
              </td>
              <td class="py-3 px-4">
                <a
                  href="/payment/invoice?payment_id=<%= order.paymentId %>&order_id=<%= order.orderId %>&amount=<%= order.amount %>"
                  class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm"
                  target="_blank"
                >
                  View Invoice
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } %>
    </main>
  </body>
</html>
