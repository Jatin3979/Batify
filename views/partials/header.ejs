<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Batify made by Jatin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="pt-16 font-['helvetica_now_display'] bg-gray-50">
    <!-- Navbar -->
    <nav class="fixed top-0 left-0 w-full bg-white shadow-md z-50">
      <div
        class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between"
      >
        <!-- Logo -->
        <a href="/shop" class="text-2xl font-bold text-gray-800">Batify</a>

        <!-- Desktop Menu -->
        <% var loggedin = typeof loggedin !== "undefined" ? loggedin : true %>
        <div
          class="hidden md:flex items-center gap-6 text-gray-700 font-medium text-base"
        >
          <% if (loggedin) { %>
          <a href="/shop" class="hover:text-black transition">Shop</a>
          <a href="/cart" class="hover:text-black transition">Cart</a>
          <a href="/users/myaccount" class="hover:text-black transition"
            >My Account</a
          >
          <a
            href="/users/logout"
            class="text-red-600 hover:text-red-700 transition"
            >Logout</a
          >
          <% } %>
        </div>
        <!-- Mobile Right Section (Cart Icon + Menu Button) -->
        <div class="flex items-center gap-4 md:hidden">
          <% if (loggedin) { %>
          <a href="/cart" class="relative">
            <i class="ri-shopping-cart-2-line text-2xl text-gray-800"></i>
            <!-- Optional: Cart Item Count -->
          </a>
          <% } %>
          <button id="menu-btn" class="text-2xl text-gray-800">
            <i class="ri-menu-line"></i>
          </button>
        </div>
      </div>

      <!-- Mobile Dropdown -->
      <div
        id="mobile-menu"
        class="hidden flex-col items-start gap-4 px-6 pb-4 bg-white shadow-md md:hidden"
      >
        <% if (loggedin) { %>
        <a
          href="/shop"
          class="block w-full py-2 border-b border-gray-200 hover:bg-gray-100"
          >Shop</a
        >
        <a
          href="/cart"
          class="block w-full py-2 border-b border-gray-200 hover:bg-gray-100"
          >Cart</a
        >
        <a
          href="/users/myaccount"
          class="block w-full py-2 border-b border-gray-200 hover:bg-gray-100"
          >My Account</a
        >
        <a
          href="/users/logout"
          class="block w-full py-2 text-red-600 hover:bg-red-100"
          >Logout</a
        >
        <% } %>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if (error && error.length > 0) { %>
    <div
      class="mt-20 max-w-lg mx-auto bg-red-500 text-white px-4 py-2 rounded shadow"
    >
      <%= error[0] %>
    </div>
    <% } %> <% if (success && success.length > 0) { %>
    <div
      class="mt-20 max-w-lg mx-auto bg-green-500 text-white px-4 py-2 rounded shadow"
    >
      <%= success[0] %>
    </div>
    <% } %>

    <script>
      // Mobile menu toggle
      document.getElementById("menu-btn").addEventListener("click", () => {
        const menu = document.getElementById("mobile-menu");
        menu.classList.toggle("hidden");
      });
    </script>
  </body>
</html>
