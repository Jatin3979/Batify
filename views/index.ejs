<%- include('./partials/header') %> 

<div class="w-full min-h-screen flex flex-col lg:flex-row px-5 lg:px-20 py-10 lg:py-0">
  
  <!-- Register Section -->
  <div class="w-full lg:w-1/2 flex items-center justify-center mb-10 lg:mb-0">
    <div class="w-full max-w-md px-5 sm:px-10">
      <h3 class="text-3xl sm:text-4xl mb-2">
        Welcome to <span class="text-blue-400 font-semibold">Batify</span>
      </h3>
      <h4 class="text-xl sm:text-2xl mb-5">Create your account</h4>
      <form autocomplete="off" action="/users/register" method="post">
        <input
          class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-200 rounded-md mb-3"
          type="text"
          placeholder="Full Name"
          name="fullname"
          required
        />
        <input
          class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-200 rounded-md mb-3"
          type="email"
          placeholder="Email"
          name="email"
          required
        />
        <input
          class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-200 rounded-md mb-3"
          type="password"
          placeholder="Password"
          name="password"
          required
        />
        <input
          class="px-5 py-3 mt-2 w-full sm:w-auto rounded-full bg-blue-500 hover:bg-blue-600 transition text-white cursor-pointer"
          type="submit"
          value="Create My Account"
        />
      </form>
    </div>
  </div>

  <!-- Login Section -->
  <div class="w-full lg:w-1/2 flex items-center justify-center">
    <div class="w-full max-w-md px-5 sm:px-10">
      <h4 class="text-xl sm:text-2xl capitalize mb-5">Login to your account</h4>
      <form autocomplete="off" action="/users/login" method="post">
        <input
          class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-200 rounded-md mb-3"
          type="email"
          placeholder="Email"
          name="email"
          required
        />
        <input
          class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-200 rounded-md mb-3"
          type="password"
          placeholder="Password"
          name="password"
          required
        />
        <input
          class="px-5 py-3 mt-2 w-full sm:w-auto rounded-full bg-blue-500 hover:bg-blue-600 transition text-white cursor-pointer"
          type="submit"
          value="Login"
        />
      </form>
    </div>
  </div>

</div>

<%- include('./partials/footer') %> 
